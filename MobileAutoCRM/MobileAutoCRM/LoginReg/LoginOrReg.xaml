<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAutoCRM.LoginOrReg">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Авторизация" FontSize="25" />
            <Entry x:Name="mailField" Placeholder="Введите почту" />
            <Entry x:Name="passField" Placeholder="Введите пароль" IsPassword="True"  />
            <Button x:Name="buttonLogin" Text="Войти" Clicked="Login" />
            <Button x:Name="buttonToReg" Text="Зарегистрироваться" Clicked="ToRegPage" />
            
            <Label x:Name="errorText" Text="" TextColor="Red" FontSize="15" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>