<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAutoCRM.RegPage">

    <ContentPage.Resources>
        <StyleSheet Source="/mystyles.css" />
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Margin="10,100,10,0">
            <Label Text="Регистрация" FontSize="25" HorizontalOptions="Center" />
			<Entry x:Name="nameField" Placeholder="Введите имя" />
			<Entry x:Name="mailField" Placeholder="Введите почту" />
			<Entry x:Name="passField" Placeholder="Введите пароль" IsPassword="True" />
            <Entry x:Name="passField2" Placeholder="Повтор пароля" IsPassword="True" />

			<Label Text="Вы согласны зарегистрироваться?" />
			<CheckBox Color="Gray" x:Name="checkField" />

            <Button StyleClass="buttonMain" x:Name="buttonSend" Text="Зарегистрироваться" Clicked="RegPageToCustPage" BorderWidth="1" BorderColor="#698080" />
            <Label x:Name="errorText" Text="" TextColor="Red" FontSize="15" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>