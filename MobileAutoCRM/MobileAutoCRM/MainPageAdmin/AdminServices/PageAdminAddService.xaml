<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAutoCRM.PageAdminAddService">

    <ContentPage.Resources>
        <StyleSheet Source="/mystyles.css" />
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Margin="15">
            <Label Text="Добавьте услугу:" />
            <Entry x:Name="nameService" Placeholder="Название услуги" />
            <Entry x:Name="priceService" Placeholder="Цена услуги" />
            <Entry x:Name="imageService" Placeholder="URL Картинки" />
            <Editor x:Name="descService" Placeholder="Описание услуги" HeightRequest="200" />

            <Button StyleClass="buttonMain" Text="Добавить услугу" Clicked="AddServiceButton" BorderWidth="1" BorderColor="#698080" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>  