<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAutoCRM.MainPageAdminService">

    <ContentPage.Resources>
        <StyleSheet Source="/mystyles.css" />
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Margin="10,100,10,0">
            <Button StyleClass="buttonMain" x:Name="buttonToListService" Text="Список сервисов" Clicked="RegPageToPageAdminListService" BorderWidth="1" BorderColor="#698080" />
            <Button StyleClass="buttonMain" x:Name="buttonToAddService" Text="Добавить сервис" Clicked="RegPageToPageAdminAddService" BorderWidth="1" BorderColor="#698080" />
            <Button StyleClass="buttonMain" x:Name="buttonToDelService" Text="Удалить сервис" Clicked="RegPageToPageAdminDelService" BorderWidth="1" BorderColor="#698080" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>