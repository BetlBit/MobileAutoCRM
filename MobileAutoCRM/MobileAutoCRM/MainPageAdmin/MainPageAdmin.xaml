<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAutoCRM.MainPageAdmin">

    <ContentPage.Resources>
        <StyleSheet Source="/mystyles.css" />
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Margin="10,100,10,0">
            <Button StyleClass="buttonMain" x:Name="toAdminService" Text="К сервисам" Clicked="ToAdminServices" BorderWidth="1" BorderColor="#698080" />
            <Button StyleClass="buttonMain" x:Name="toAdminUsers" Text="К пользователям" Clicked="ToAdminUsers" BorderWidth="1" BorderColor="#698080" />
            <Button StyleClass="buttonMain" x:Name="buttonToMainPageCust" Text="На главный экран" Clicked="ToMainPageCust" BorderWidth="1" BorderColor="#698080" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>